        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoRecoveryDemoWPF"
        mc:Ignorable="d"
        Title="AutoRecovery Demo" Height="207" Width="504"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
